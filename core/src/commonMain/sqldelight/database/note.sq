CREATE TABLE NoteEntity(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    content TEXT NOT NULL,
    color INTEGER NOT NULL,
    timestamp INTEGER NOT NULL
);

getAllNotes:
SELECT *
FROM NoteEntity;

getNoteById:
SELECT *
FROM NoteEntity
WHERE id = ?;

insertNote:
INSERT OR REPLACE
INTO NoteEntity(
    title,
    content,
    color,
    timestamp
) VALUES(?, ?, ?, ?);

deleteNoteById:
DELETE FROM NoteEntity
WHERE id = ?;